<h1><%= @book.title %></h1>
<h2><%= @book.subtitle %></h2>
<p>Date added: <%= @book.created_at %></p>
<p>Publisher: <%= @book.publisher.name %></p>
<p>Authors: <%= @book.authors.map{|a| a.name}.join(',') unless @book.authors.blank? %></p>
<p>Categories: <%= @book.categories.map{|c| c.name}.join(',') unless @book.categories.blank? %></p>
<p>Page count: <%= @book.page_count %></p>
<section>
  Description: <%= sanitize @book.description %>
</section>


<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
