<%= form_for(book) do |f| %>
  <div class='form-group'>
    <%= f.label :title %><%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :subtitle %><%= f.text_field :subtitle, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :authors %>
    <ul>
      <% book.authors.each do |a| %>
        <li class='label label-primary'><%= a.name %></li>
      <% end %>
    </ul>
  </div>

  <div class='form-group'>
    <%= f.label :publisher %>
    <%= book.publisher.name %>
  </div>

  <div class='form-group'>
    <%= f.label :page_count %><%= f.text_field :page_count, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :isbn13, 'ISBN13' %><%= f.text_field :isbn13, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :in_library %><%= f.check_box :in_library, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <p>Basic HTML formatting is permitted: &lt;p&gt;, &lt;br&gt;, &lt;ul&gt;, &lt;b&gt;, ...</p>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :google_volume_id %><%= f.text_field :google_volume_id, class: 'form-control' %>
  </div>

  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>
