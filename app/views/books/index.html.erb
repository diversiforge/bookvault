<h1>Books</h1>

<%= search_form_for Book.ransack, url: search_books_path, method: :post do |f| %>
  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.submit %>
<% end %>

<table class='table table-hover'>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.display_title, book %></td>
        <td><%= author_list_links(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
