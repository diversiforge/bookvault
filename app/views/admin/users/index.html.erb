<h1>Users</h1>

<table class='table table-hover'>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to (user.display_name), edit_admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-default btn-xs' %></td>
        <td>
          <% if user.active %>
            <%= link_to 'Disable', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure you want to disable this user?' }, class: 'btn btn-danger btn-xs' %>
          <% else %>
            <%= link_to 'Enable', admin_user_path(user, user: {active: true}), method: :patch, data: { confirm: 'Are you sure you want to enable this user?' }, class: 'btn btn-default btn-xs' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary' %>
